      "source": [
        "# =================================================================\n",
        "# CÓDIGO DO PROJETO: MIGRADO PARA SQLITE E FINALIZADO\n",
        "# REQUISITO ATENDIDO: Limpeza de tela eficaz para o ambiente Google Colab.\n",
        "# REQUISITO ATENDIDO: Atualizado para buscar Top 50 Jogos/Franquias.\n",
        "# =================================================================\n",
        "print(\"Bernardo Rebello E Pedro Parras! (Versão SQL e História)\")\n",
        "\n",
        "# 1. IMPORTS DE BIBLIOTECAS\n",
        "# -------------------------\n",
        "import os\n",
        "import sqlite3\n",
        "from datetime import datetime\n",
        "from google import genai\n",
        "from google.colab import userdata\n",
        "import time\n",
        "# IMPORT PARA LIMPEZA DE TELA NO GOOGLE COLAB\n",
        "from IPython.display import clear_output\n",
        "\n",
        "\n",
        "# Constantes do Projeto\n",
        "API_KEY_NAME = 'FNAF_GEMINI_API'\n",
        "NOME_ARQUIVO_DADOS = \"dados_indies_coleta.db\"\n",
        "NOME_TABELA = \"coleta_indies\"\n",
        "\n",
        "# Constantes de Tema (TEMA ATUALIZADO PARA TOP 50)\n",
        "TEMA_TOP_INDIES = \"Top 50 Jogos Indies (Desde 2010)\"\n",
        "TEMA_PERGUNTAS = \"Perguntas Personalizadas sobre Jogos\"\n",
        "TEMA_HISTORIA = \"História do Jogo Selecionado\"\n",
        "TEMA_CURIOSIDADES = \"Curiosidades sobre Jogos Indies\"\n",
        "\n",
        "\n",
        "# 2. FUNÇÕES DE UTILIDADE\n",
        "# -----------------------\n",
        "def limpar_tela():\n",
        "    \"\"\"Limpa a tela do console/notebook de forma compatível com o Colab.\"\"\"\n",
        "    try:\n",
        "        clear_output(wait=True) # Específico para Jupyter/Colab\n",
        "    except:\n",
        "        # Tenta a limpeza de terminal padrão\n",
        "        if os.name == 'nt': # Para Windows\n",
        "            os.system('cls')\n",
        "        else: # Para Linux/macOS\n",
        "            os.system('clear')\n",
        "\n",
        "# 3. FUNÇÕES SQLITE (CONEXÃO E CRIAÇÃO)\n",
        "# --------------------------------------\n",
        "def conectar_db():\n",
        "    \"\"\"Cria ou conecta-se ao banco de dados e garante que a tabela exista.\"\"\"\n",
        "    try:\n",
        "        conn = sqlite3.connect(NOME_ARQUIVO_DADOS)\n",
        "        cursor = conn.cursor()\n",
        "\n",
        "        # Cria a tabela se ela não existir\n",
        "        cursor.execute(f\"\"\"\n",
        "            CREATE TABLE IF NOT EXISTS {NOME_TABELA} (\n",
        "                id INTEGER PRIMARY KEY AUTOINCREMENT,\n",
        "                data_hora TEXT NOT NULL,\n",
        "                tema TEXT NOT NULL,\n",
        "                prompt_enviado TEXT,\n",
        "                resposta_api TEXT\n",
        "            )\n",
        "        \"\"\")\n",
        "        conn.commit()\n",
        "        return conn\n",
        "    except Exception as e:\n",
        "        print(f\"ERRO AO CONECTAR/CRIAR BANCO DE DADOS: {e}\")\n",
        "        return None\n",
        "\n",
        "\n",
        "# 4. FUNÇÃO PARA OBTER E PROCESSAR A LISTA DE JOGOS SALVA\n",
        "# ------------------------------------------------------------\n",
        "def obter_lista_de_jogos_salva():\n",
        "    \"\"\"Busca o último resultado de Top 50 Jogos Indies e extrai os nomes.\"\"\"\n",
        "    conn = conectar_db()\n",
        "    if not conn:\n",
        "        return []\n",
        "\n",
        "    try:\n",
        "        cursor = conn.cursor()\n",
        "        cursor.execute(f\"\"\"\n",
        "            SELECT resposta_api\n",
        "            FROM {NOME_TABELA}\n",
        "            WHERE tema = ?\n",
        "            ORDER BY id DESC\n",
        "            LIMIT 1\n",
        "        \"\"\", (TEMA_TOP_INDIES,))\n",
        "\n",
        "        resultado_texto = cursor.fetchone()\n",
        "\n",
        "        if not resultado_texto:\n",
        "            return []\n",
        "\n",
        "        nomes_jogos = []\n",
        "        # Processa o texto (esperando uma lista numerada ou com tópicos)\n",
        "        for linha in resultado_texto[0].split('\\n'):\n",
        "            linha = linha.strip()\n",
        "\n",
        "            # Tenta filtrar linhas que começam com número seguido de ponto (Ex: \"1. Jogo\")\n",
        "            if linha and linha.split(' ', 1)[0].replace('.', '').isdigit():\n",
        "                # Remove o número e a descrição\n",
        "                nome_completo = linha.split('. ', 1)[-1].split(':', 1)[0].strip()\n",
        "\n",
        "                if nome_completo:\n",
        "                    nomes_jogos.append(nome_completo)\n",
        "\n",
        "        # Remove duplicatas e mantém a ordem\n",
        "        nomes_unicos = []\n",
        "        [nomes_unicos.append(x) for x in nomes_jogos if x not in nomes_unicos]\n",
        "        return nomes_unicos\n",
        "\n",
        "    except Exception as e:\n",
        "        print(f\"ERRO AO OBTER/PROCESSAR LISTA DO SQLITE: {e}\")\n",
        "        return []\n",
        "\n",
        "    finally:\n",
        "        conn.close()\n",
        "\n",
        "\n",
        "# 5. FUNÇÃO PRINCIPAL DE BUSCA E SALVAMENTO\n",
        "# -----------------------------------------------------------\n",
        "def buscar_e_salvar_dados(prompt_pergunta, tema_da_pesquisa, nome_do_jogo=\"\"):\n",
        "    \"\"\"\n",
        "    Envia um prompt para o modelo Gemini e salva a resposta no banco de dados SQLite.\n",
        "    \"\"\"\n",
        "\n",
        "    # Define o tema a ser salvo no banco de dados\n",
        "    tema_para_salvar = f\"{tema_da_pesquisa}: {nome_do_jogo}\" if nome_do_jogo and tema_da_pesquisa == TEMA_HISTORIA else tema_da_pesquisa\n",
        "\n",
        "    print(f\"\\n--- Iniciando Pesquisa: {tema_para_salvar} ---\")\n",
        "    conn = conectar_db()\n",
        "    if not conn:\n",
        "        return \"ERRO FATAL: Falha na conexão com o Banco de Dados.\"\n",
        "\n",
        "    # --- 5.1. CONFIGURAÇÃO DA API KEY E CLIENTE ---\n",
        "    try:\n",
        "        api_key = userdata.get(API_KEY_NAME)\n",
        "        if not api_key:\n",
        "             raise ValueError(f\"API Key não encontrada no Segredo '{API_KEY_NAME}'.\")\n",
        "\n",
        "        client = genai.Client(api_key=api_key)\n",
        "        print(\"API configurada com sucesso através do objeto Client.\")\n",
        "\n",
        "    except Exception as e:\n",
        "        resposta_tratada = f\"ERRO DE CONFIGURAÇÃO DA API: {e}\"\n",
        "        print(resposta_tratada)\n",
        "        conn.close()\n",
        "        return resposta_tratada\n",
        "\n",
        "    # --- 5.2. REQUISIÇÃO À API (Busca de Dados) ---\n",
        "    try:\n",
        "        print(f\"[BUSCANDO] Enviando prompt: '{prompt_pergunta[:70]}...'\")\n",
        "\n",
        "        response = client.models.generate_content(\n",
        "            model='gemini-2.5-flash',\n",
        "            contents=prompt_pergunta\n",
        "        )\n",
        "\n",
        "        resposta_tratada = response.text.strip()\n",
        "        print(\"[SUCESSO] Resposta recebida da API.\")\n",
        "\n",
        "    except Exception as e:\n",
        "        resposta_tratada = f\"ERRO NA REQUISIÇÃO DA API: {e}\"\n",
        "        print(resposta_tratada)\n",
        "        conn.close()\n",
        "        return resposta_tratada\n",
        "\n",
        "    # --- 5.3. SALVAMENTO NO BANCO DE DADOS SQLITE ---\n",
        "    try:\n",
        "        cursor = conn.cursor()\n",
        "        data_hora = datetime.now().strftime(\"%Y-%m-%d %H:%M:%S\")\n",
        "\n",
        "        cursor.execute(f\"\"\"\n",
        "            INSERT INTO {NOME_TABELA} (data_hora, tema, prompt_enviado, resposta_api)\n",
        "            VALUES (?, ?, ?, ?)\n",
        "        \"\"\", (data_hora, tema_para_salvar, prompt_pergunta, resposta_tratada))\n",
        "\n",
        "        conn.commit()\n",
        "        print(f\"[SQLITE] Dados salvos e atualizados no banco de dados '{NOME_ARQUIVO_DADOS}'.\")\n",
        "\n",
        "    except Exception as e:\n",
        "        print(f\"ERRO AO INSERIR DADOS NO SQLITE: {e}\")\n",
        "\n",
        "    finally:\n",
        "        conn.close()\n",
        "\n",
        "    return resposta_tratada\n",
        "\n",
        "\n",
        "# 6. FUNÇÃO PARA EXIBIR DADOS (SQL)\n",
        "# -----------------------------------------------\n",
        "def exibir_dados_do_sql(tema_desejado, busca_por_termo=False):\n",
        "    \"\"\"\n",
        "    Busca o último dado salvo para um tema específico no banco de dados e exibe.\n",
        "    Se busca_por_termo=True, lista todas as entradas do tema e permite seleção.\n",
        "    \"\"\"\n",
        "    conn = conectar_db()\n",
        "    if not conn:\n",
        "        return\n",
        "\n",
        "    try:\n",
        "        cursor = conn.cursor()\n",
        "\n",
        "        if busca_por_termo:\n",
        "            # Busca todas as entradas de história\n",
        "            cursor.execute(f\"\"\"\n",
        "                SELECT id, data_hora, tema, resposta_api\n",
        "                FROM {NOME_TABELA}\n",
        "                WHERE tema LIKE ?\n",
        "                ORDER BY id DESC\n",
        "            \"\"\", (f\"{TEMA_HISTORIA}%\",))\n",
        "\n",
        "            resultados = cursor.fetchall()\n",
        "\n",
        "            if not resultados:\n",
        "                print(f\"\\n--- ERRO: Nenhum histórico encontrado no Banco de Dados para '{TEMA_HISTORIA}'.\")\n",
        "                print(\"Execute a Opção 2 e depois a opção de História primeiro.\")\n",
        "                return\n",
        "\n",
        "            limpar_tela()\n",
        "            print(\"\\n\" + \"=\"*50)\n",
        "            print(\"| HISTÓRICOS DE HISTÓRIAS SALVAS |\")\n",
        "            print(\"=\"*50)\n",
        "\n",
        "            # Cria lista legível para o usuário\n",
        "            historicos = {}\n",
        "            for i, (id_db, data_hora, tema_completo, resposta_api) in enumerate(resultados):\n",
        "                # Extrai apenas o nome do jogo\n",
        "                nome_jogo = tema_completo.replace(f\"{TEMA_HISTORIA}: \", \"\")\n",
        "                display_text = f\"[{i+1:02}] - {nome_jogo} (Consultado em: {data_hora.split(' ')[0]})\"\n",
        "                print(display_text)\n",
        "                historicos[i+1] = (data_hora, nome_jogo, resposta_api)\n",
        "\n",
        "            print(\"-\" * 50)\n",
        "\n",
        "            # Seleção de histórico\n",
        "            while True:\n",
        "                try:\n",
        "                    escolha = input(\"Digite o número do histórico que deseja visualizar (0 para cancelar): \")\n",
        "                    if not escolha.isdigit():\n",
        "                         raise ValueError\n",
        "\n",
        "                    escolha = int(escolha)\n",
        "\n",
        "                    if escolha == 0:\n",
        "                        limpar_tela()\n",
        "                        return\n",
        "\n",
        "                    if escolha in historicos:\n",
        "                        data_consulta, nome_jogo, resposta = historicos[escolha]\n",
        "                        limpar_tela()\n",
        "                        print(f\"\\n=======================================================\")\n",
        "                        print(f\"| HISTÓRIA: {nome_jogo}\")\n",
        "                        print(f\"| Consulta realizada em: {data_consulta}\")\n",
        "                        print(f\"=======================================================\\n\")\n",
        "                        print(resposta)\n",
        "                        print(\"\\n=======================================================\\n\")\n",
        "                        return\n",
        "                    else:\n",
        "                        print(\"Opção inválida. Tente novamente.\")\n",
        "                except ValueError:\n",
        "                    print(\"Entrada inválida. Digite apenas o número.\")\n",
        "\n",
        "\n",
        "        else:\n",
        "            # Lógica para TEMA_TOP_INDIES, TEMA_CURIOSIDADES e TEMA_PERGUNTAS (último resultado)\n",
        "            cursor.execute(f\"\"\"\n",
        "                SELECT data_hora, prompt_enviado, resposta_api\n",
        "                FROM {NOME_TABELA}\n",
        "                WHERE tema = ?\n",
        "                ORDER BY id DESC\n",
        "                LIMIT 1\n",
        "            \"\"\", (tema_desejado,))\n",
        "\n",
        "            ultima_consulta = cursor.fetchone()\n",
        "\n",
        "            if not ultima_consulta:\n",
        "                print(f\"\\n--- ERRO: Nenhum dado encontrado no Banco de Dados para o tema '{tema_desejado}'.\")\n",
        "                print(\"Execute a opção de pesquisa correspondente primeiro.\")\n",
        "                return\n",
        "\n",
        "            data_consulta, prompt, resposta = ultima_consulta\n",
        "\n",
        "            limpar_tela()\n",
        "            print(f\"\\n=======================================================\")\n",
        "            print(f\"| DADOS DO SQLITE: {tema_desejado}\")\n",
        "            print(f\"| Última consulta: {data_consulta}\")\n",
        "            # Mostra o prompt para perguntas, mas não para listas grandes\n",
        "            if tema_desejado in (TEMA_PERGUNTAS, TEMA_CURIOSIDADES):\n",
        "                 print(f\"| Último Prompt Enviado: {prompt[:70]}...\")\n",
        "            print(f\"=======================================================\\n\")\n",
        "            print(resposta)\n",
        "            print(\"\\n=======================================================\\n\")\n",
        "\n",
        "    except Exception as e:\n",
        "        print(f\"\\n--- ERRO ao ler o Banco de Dados: {e}\")\n",
        "\n",
        "    finally:\n",
        "        conn.close()\n",
        "\n",
        "# 7. FUNÇÃO DO SUB-MENU DE VISUALIZAÇÃO\n",
        "# -------------------------------------------\n",
        "def sub_menu_visualizacao():\n",
        "    \"\"\"Sub-menu para permitir a escolha da pesquisa salva para visualização.\"\"\"\n",
        "\n",
        "    while True:\n",
        "        limpar_tela() # Limpa a tela antes de mostrar o sub-menu\n",
        "        print(\"\\n\" + \"=\"*50)\n",
        "        print(\"   SUB-MENU: VISUALIZAR PESQUISAS SALVAS (SQLITE)\")\n",
        "        print(\"=\"*50)\n",
        "        print(f\"1 - Mostrar: {TEMA_TOP_INDIES}\")\n",
        "        print(f\"2 - Mostrar: Perguntas Personalizadas (Última)\")\n",
        "        print(f\"3 - Mostrar: {TEMA_CURIOSIDADES} (Última)\")\n",
        "        print(f\"4 - Mostrar: Histórico de Histórias Salvas\")\n",
        "        print(\"9 - Voltar ao Menu Principal\")\n",
        "        print(\"-\" * 50)\n",
        "\n",
        "        escolha = input(\"Digite o número da opção desejada: \")\n",
        "\n",
        "        if escolha == '1':\n",
        "             exibir_dados_do_sql(TEMA_TOP_INDIES)\n",
        "             input(\"\\nPressione ENTER para continuar...\")\n",
        "        elif escolha == '2':\n",
        "             exibir_dados_do_sql(TEMA_PERGUNTAS)\n",
        "             input(\"\\nPressione ENTER para continuar...\")\n",
        "        elif escolha == '3':\n",
        "             exibir_dados_do_sql(TEMA_CURIOSIDADES)\n",
        "             input(\"\\nPressione ENTER para continuar...\")\n",
        "        elif escolha == '4':\n",
        "             exibir_dados_do_sql(TEMA_HISTORIA, busca_por_termo=True)\n",
        "             input(\"\\nPressione ENTER para continuar...\")\n",
        "        elif escolha == '9':\n",
        "             limpar_tela() # Limpa ao voltar para o menu principal\n",
        "             break\n",
        "        else:\n",
        "             print(\"\\nOpção inválida. Por favor, tente novamente.\")\n",
        "             time.sleep(1)\n",
        "\n",
        "# 8. FUNÇÃO DE PERGUNTA PERSONALIZADA (COM SUB-MENU)\n",
        "# --------------------------------------------------\n",
        "def fazer_pergunta_personalizada(lista_jogos):\n",
        "    \"\"\"Gerencia a seleção do jogo e a escolha entre História e Pergunta Livre.\"\"\"\n",
        "\n",
        "    while True:\n",
        "        limpar_tela() # Limpa a tela antes de mostrar a seleção de jogos\n",
        "\n",
        "        # 8.1. SELEÇÃO DO JOGO\n",
        "        print(\"\\n\" + \"=\"*40)\n",
        "        print(\"Selecione o Jogo para a Pergunta:\")\n",
        "        print(\"=\"*40)\n",
        "        for i, jogo in enumerate(lista_jogos, 1):\n",
        "            print(f\"{i} - {jogo}\")\n",
        "        print(\"-\" * 40)\n",
        "        print(\"0 - Cancelar e Voltar ao Menu\")\n",
        "\n",
        "        try:\n",
        "            selecao_jogo = int(input(\"\\nDigite o número do jogo: \"))\n",
        "            if selecao_jogo == 0:\n",
        "                limpar_tela()\n",
        "                break\n",
        "\n",
        "            if 1 <= selecao_jogo <= len(lista_jogos):\n",
        "                jogo_selecionado = lista_jogos[selecao_jogo - 1]\n",
        "\n",
        "                # 8.2. SUB-MENU DE PERGUNTA\n",
        "                while True:\n",
        "                    limpar_tela() # Limpa a tela antes de mostrar o sub-menu\n",
        "                    print(f\"\\n--- Jogo Selecionado: {jogo_selecionado} ---\")\n",
        "                    print(\"\\n\" + \"=\"*40)\n",
        "                    print(\"O que você gostaria de perguntar?\")\n",
        "                    print(\"=\"*40)\n",
        "                    print(\"1 - Pesquisar a História/Lore Completa do Jogo\")\n",
        "                    print(\"2 - Fazer Outra Pergunta Específica (Livre)\")\n",
        "                    print(\"9 - Voltar à Seleção de Jogos\")\n",
        "                    print(\"-\" * 40)\n",
        "\n",
        "                    escolha_pergunta = input(\"Digite a opção desejada: \")\n",
        "\n",
        "                    if escolha_pergunta == '1':\n",
        "                        # OPÇÃO 1: HISTÓRIA\n",
        "                        prompt_historia = f\"Descreva a história completa e a lore de '{jogo_selecionado}'. Forneça os detalhes cronológicos e o contexto de desenvolvimento (se aplicável). Formate como texto detalhado com parágrafos.\"\n",
        "\n",
        "                        limpar_tela() # Limpa antes de mostrar os detalhes da busca\n",
        "                        resultado = buscar_e_salvar_dados(prompt_historia, TEMA_HISTORIA, nome_do_jogo=jogo_selecionado)\n",
        "\n",
        "                        print(\"\\n--- RESULTADO DA HISTÓRIA (API) ---\")\n",
        "                        print(resultado)\n",
        "                        input(\"\\nDados salvos. Pressione ENTER para voltar ao menu...\")\n",
        "                        limpar_tela()\n",
        "                        return # Volta ao menu principal após a busca\n",
        "\n",
        "                    elif escolha_pergunta == '2':\n",
        "                        # OPÇÃO 2: PERGUNTA LIVRE\n",
        "                        limpar_tela() # Limpa antes de capturar a pergunta\n",
        "                        print(f\"\\n--- Pergunta sobre: {jogo_selecionado} ---\")\n",
        "                        pergunta_usuario = input(\"Digite sua pergunta:\\n> \")\n",
        "\n",
        "                        prompt_final = f\"Baseado no jogo '{jogo_selecionado}', responda à seguinte pergunta: {pergunta_usuario}\"\n",
        "\n",
        "                        limpar_tela() # Limpa antes de mostrar os detalhes da busca\n",
        "                        resultado = buscar_e_salvar_dados(prompt_final, TEMA_PERGUNTAS)\n",
        "\n",
        "                        print(\"\\n--- RESULTADO DA PESQUISA (API) ---\")\n",
        "                        print(resultado)\n",
        "                        input(\"\\nDados salvos. Pressione ENTER para voltar ao menu...\")\n",
        "                        limpar_tela()\n",
        "                        return # Volta ao menu principal após a busca\n",
        "\n",
        "                    elif escolha_pergunta == '9':\n",
        "                        break # Volta para a seleção de jogos\n",
        "\n",
        "                    else:\n",
        "                        print(\"Opção inválida. Tente novamente.\")\n",
        "                        time.sleep(1)\n",
        "\n",
        "            else:\n",
        "                print(\"Seleção inválida. Tente novamente.\")\n",
        "                time.sleep(1)\n",
        "\n",
        "        except ValueError:\n",
        "            print(\"Entrada inválida. Digite apenas o número.\")\n",
        "            time.sleep(1)\n",
        "\n",
        "    return\n",
        "\n",
        "\n",
        "# 9. FUNÇÃO DO MENU PRINCIPAL\n",
        "# ---------------------------\n",
        "def menu_principal():\n",
        "    \"\"\"Gerencia o loop principal do programa e as escolhas do usuário.\"\"\"\n",
        "\n",
        "    while True:\n",
        "        limpar_tela() # Limpa a tela antes de mostrar o menu principal\n",
        "\n",
        "        print(\"\\n\" + \"=\"*40)\n",
        "        print(\"        MENU: COLETA JOGOS INDIES (SQLITE)\")\n",
        "        print(\"=\"*40)\n",
        "        # Opções de Pesquisa (API)\n",
        "        print(f\"1 - Pesquisar {TEMA_TOP_INDIES} (API e Salvar SQL)\")\n",
        "        print(f\"2 - Fazer Perguntas Personalizadas (API e Salvar SQL)\")\n",
        "        print(f\"3 - Curiosidades sobre Jogos Indies (API e Salvar SQL)\")\n",
        "        print(\"-\" * 40)\n",
        "        # Opções de Visualização (SQLITE)\n",
        "        print(\"5 - Visualizar Dados Salvos (Sub-menu SQLITE)\")\n",
        "        print(\"-\" * 40)\n",
        "        print(\"0 - Sair do Programa\")\n",
        "        print(\"=\" * 40)\n",
        "\n",
        "        escolha = input(\"Digite o número da opção desejada: \")\n",
        "\n",
        "        if escolha == '1':\n",
        "            # PROMPT ATUALIZADO PARA TOP 50 E FRÂNQUIAS\n",
        "            prompt = \"\"\"Liste os 50 jogos independentes (Indie Games) mais famosos e influentes lançados desde 2010.\n",
        "            Inclua franquias (como Five Nights at Freddy's ou Shovel Knight), listando o nome principal ou mais famoso da franquia.\n",
        "            Para cada jogo/franquia, forneça o nome, o ano de lançamento do primeiro jogo ou do mais icônico, e uma breve descrição do seu gênero ou impacto.\n",
        "            Formate a resposta como uma lista numerada.\"\"\"\n",
        "\n",
        "            limpar_tela() # Limpa antes de mostrar os detalhes da busca\n",
        "            resultado = buscar_e_salvar_dados(prompt, TEMA_TOP_INDIES)\n",
        "            print(\"\\n--- RESULTADO DA PESQUISA (API) ---\")\n",
        "            print(resultado)\n",
        "            input(\"\\nDados salvos. Pressione ENTER para voltar ao menu...\")\n",
        "\n",
        "        elif escolha == '2':\n",
        "            # Opção 2: Perguntas Personalizadas (CHAMA NOVO FLUXO)\n",
        "            lista_jogos = obter_lista_de_jogos_salva()\n",
        "\n",
        "            if not lista_jogos:\n",
        "                limpar_tela()\n",
        "                print(\"\\nERRO: A lista de jogos (Top 50) está vazia.\")\n",
        "                print(\"Por favor, execute a Opção 1 primeiro para gerar e salvar a lista de jogos.\")\n",
        "                input(\"\\nPressione ENTER para voltar ao menu...\")\n",
        "                continue\n",
        "\n",
        "            fazer_pergunta_personalizada(lista_jogos)\n",
        "\n",
        "        elif escolha == '3':\n",
        "            # Opção 3: Curiosidades sobre Jogos Indies (USA JOGOS SALVOS)\n",
        "            lista_jogos = obter_lista_de_jogos_salva()\n",
        "\n",
        "            if not lista_jogos:\n",
        "                limpar_tela()\n",
        "                print(\"\\nERRO: A lista de jogos (Top 50) está vazia.\")\n",
        "                print(\"Por favor, execute a Opção 1 primeiro para gerar e salvar a lista de jogos, para que as Curiosidades sejam específicas.\")\n",
        "                input(\"\\nPressione ENTER para voltar ao menu...\")\n",
        "                continue\n",
        "\n",
        "            # Usa os primeiros 10 jogos para manter o prompt conciso e eficiente\n",
        "            jogos_para_curiosidade = \", \".join(lista_jogos[:10])\n",
        "\n",
        "            prompt_curiosidades = f\"\"\"Liste 10 curiosidades ou fatos pouco conhecidos sobre os seguintes jogos independentes: {jogos_para_curiosidade}. Use tópicos para formatar a resposta.\"\"\"\n",
        "\n",
        "            limpar_tela() # Limpa antes de mostrar os detalhes da busca\n",
        "            resultado = buscar_e_salvar_dados(prompt_curiosidades, TEMA_CURIOSIDADES)\n",
        "            print(\"\\n--- RESULTADO DA PESQUISA (API) ---\")\n",
        "            print(resultado)\n",
        "            input(\"\\nDados salvos. Pressione ENTER para voltar ao menu...\")\n",
        "\n",
        "        elif escolha == '5':\n",
        "            sub_menu_visualizacao()\n",
        "\n",
        "        elif escolha == '0':\n",
        "            limpar_tela()\n",
        "            print(\"\\nObrigado por usar o software. Jogo finalizado.\")\n",
        "            break\n",
        "\n",
        "        else:\n",
        "            print(\"\\nOpção inválida. Por favor, digite uma opção válida.\")\n",
        "            time.sleep(1)\n",
        "\n",
        "# =================================================================\n",
        "# INÍCIO DA EXECUÇÃO DO PROGRAMA\n",
        "# =================================================================\n",
        "\n",
        "# Inicializa o programa chamando a função do menu\n",
        "menu_principal()"
      ]
